# ===================================
# CONFIGURACIÓN DE AMBIENTE
# ===================================
# IMPORTANTE: Copiar este archivo a .env y configurar con valores reales
# NUNCA subir .env a Git

# Ambiente: development, staging, production
ENVIRONMENT=development

# ===================================
# MONGODB
# ===================================
# CRÍTICO: Mantener esta información SECRETA
# Para MongoDB Atlas: mongodb+srv://usuario:password@cluster.mongodb.net/
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=ppt_game

# ===================================
# API CONFIGURATION
# ===================================
API_V1_STR=/api
PROJECT_NAME=Piedra Papel Tijera API

# ===================================
# CORS (Cross-Origin Resource Sharing)
# ===================================
# En producción, cambiar a tu dominio real
# Ejemplo: https://misitioweb.com,https://www.misitioweb.com
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
MAX_GAME_PLAYS_PER_MINUTE=30
MAX_LEADERBOARD_SAVES_PER_MINUTE=10

# ===================================
# SECURITY
# ===================================
SECURITY_HEADERS_ENABLED=true

# ===================================
# INPUT VALIDATION
# ===================================
MAX_PLAYER_NAME_LENGTH=5
MIN_PLAYER_NAME_LENGTH=1

# ===================================
# DATABASE
# ===================================
CREATE_INDEXES_ON_STARTUP=true